<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appCompat="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10.0dp"
        card_view:cardElevation="5.0dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5.0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="150.0dp"
                android:layout_height="150.0dp"
                card_view:cardCornerRadius="8.0dp">

                <ImageView
                    android:id="@+id/Iv_details_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_delete" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:layout_marginTop="3.0dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5.0dp"
                android:background="@drawable/ic_rect_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Iv_deledt_img_list"
                    android:layout_width="30dp"
                    android:layout_height="30.0dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5.0dp"
                    android:layout_weight="1.0"
                    android:src="@drawable/ic_delete" />

                <ImageView
                    android:id="@+id/Iv_share_img_list"
                    android:layout_width="30.0dp"
                    android:layout_height="30.0dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5.0dp"
                    android:layout_weight="1.0"
                    android:src="@drawable/share_icon"
                    android:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/Iv_set_as_img_list"
                    android:layout_width="30.0dp"
                    android:layout_height="30.0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:src="@drawable/ic_wallpaper" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>