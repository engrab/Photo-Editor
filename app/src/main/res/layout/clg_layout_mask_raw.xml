    android:id="@+id/FL_RAW_MAIN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.androworld.photoeditor.MaskableFrameLayout.MaskableFrameLayout
        android:id="@+id/imgMaskableFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
